{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "rootDir": "./src",  
    "outDir": "dist",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    "isolatedModules": true,
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}